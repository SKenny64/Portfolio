{% block body %}
    <div class="container">
        <h2 class="text-uppercase">spectacle</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Titre contenu</th>
                    <th scope="col">Date creation Contenu</th>
                    <th scope="col">categorie</th>
                    <th scope="col">Date Spectacle</th>
                </tr>
            </thead>
            <tbody>
                {% for page in pages %}
                <tr>
                    <td>{{ page.getTitre() }}</td>
                    <td>{{ page.getDateContenu()|date('d/m/Y') }}</td>
                    <td>{{ page.getCategorie().getLibelle() }}</td>
                    <td>{{ page.getDate()|date('d/m/Y') }}</td>
                    <td><a href='update&{{ page.getId() }}' title='' class="btn btn-warning">Modifier </a></td>
                    <td><a href='show&{{ page.getId() }}' title='' class="btn btn-info">Voir Contenu</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="row mb-5 mt-5">
            <div class="col-4">
                <a href="createSpectacle" title="vers creation contenu spectacle" class="btn btn-success">Creer une nouveau contenu</a>
            </div>
            <div class="col-4 text-end">
                <a href="backOffice" title="Vers l'accueil" class="btn btn-secondary">Retour accueil</a>
            </div>
        </div>
    </div>
{% endblock %}