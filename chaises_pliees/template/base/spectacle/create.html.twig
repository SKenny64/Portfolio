{% block body %}
  <div class="container">
    <a href="gestionSpectacle"title="retour gestion spectacle">Retour à la liste</a>
    <h1>Ajout Contenu</h1>
    <form method="post" action='createSpectacle'>
      <div class="row">
        <div class="col-sm-12 col-md-8">
          <label for="titre" class="form-label">Titre* :</label>
          <input type="text" name="titre" id="titre" class="form-control">
        </div>
        <div class="col-4">
          <label for="date" class="form-label">Date de creation :</label>
          <input type="date" name="date" id="date" class="form-control">
        </div>
      </div>
      <label for="categorieId">Categorie</label>
      <input type="hidden" name="categorieId" id="categorieId" value="{{ categories.getId }}">{{ categories.getLibelle }}</input>
      <textarea id="mytextarea" name="mytextarea" class="form-control"></textarea>
      <div class="d-grid gap-2 d-flex justify-content-end my-3">
        <button type="submit" class="btn btn-home text-align-right">Envoyer</button>
      </div>
    </form>
  </div>
{% endblock %}